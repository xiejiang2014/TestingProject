<Application
    x:Class="WpfMessageBoxDemo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WpfMessageBox;component/Styles/MessageBoxStyles.xaml" />
                <ResourceDictionary Source="/CustomizeMessageBoxStylesXXX.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <Style
                x:Key="ExtButtonStyle"
                TargetType="ButtonBase">
                <Setter
                    Property="FontSize"
                    Value="18" />
                <Setter
                    Property="Foreground"
                    Value="Red" />
            </Style>

        </ResourceDictionary>

    </Application.Resources>
</Application>
