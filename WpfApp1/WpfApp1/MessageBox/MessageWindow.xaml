<Window
    x:Class="WpfApp1.MessageBox.MessageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:messageBox="clr-namespace:WpfApp1.MessageBox"
    Title="MessageWindow"
    Width="260"
    Height="130"
    AllowsTransparency="True"
    Background="Transparent"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <Style
            BasedOn="{StaticResource WindowedTextMessageBoxStyle}"
            TargetType="{x:Type messageBox:TextMessageBox}" />

        <Style
            BasedOn="{StaticResource WindowedCustomizeWithButtonMessageBoxStyle}"
            TargetType="{x:Type messageBox:CustomizeWithButtonMessageBox}" />

    </Window.Resources>

    <messageBox:MessageBoxManager
        x:Name="MessageBoxManager"
        Margin="10"
        x:FieldModifier="public" />


</Window>