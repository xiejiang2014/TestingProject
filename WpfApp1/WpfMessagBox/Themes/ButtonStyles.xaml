<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style
        x:Key="MessageBoxButtonStyle"
        BasedOn="{StaticResource {x:Type Button}}"
        TargetType="Button">
        <Setter
            Property="MinWidth"
            Value="60" />
        <Setter
            Property="MinHeight"
            Value="30" />
        <Setter
            Property="Margin"
            Value="15" />
        <Setter
            Property="Padding"
            Value="18,4" />
    </Style>
</ResourceDictionary>